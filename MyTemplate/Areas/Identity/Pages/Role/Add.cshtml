@page
@model AddModel
@{
}

<h1>
@if (!Model.IsUpdatePage)
{
    @:Add New Role
}
else
{
    @:Update Role
}
</h1>
<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id"/>
            <input type="hidden" asp-for="IsUpdatePage"/> @*Update lại giá trị của IsUpdatePage*@
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <button id="add-role" type="submit" asp-page-handler="Save" class="btn btn-primary">Save</button>
            <a class="btn btn-primary" asp-page="./Index">Back to Role List</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}