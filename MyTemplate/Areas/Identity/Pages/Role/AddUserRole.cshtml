@page
@model AddUserRoleModel
@{
}

<h1>Update Role to User</h1>
<div class="row">
    <div class="col-md-6">
        <p>Choose roles assign to User <strong>@Model.Input.Name</strong></p>
        <form method="post">
            <partial name="_StatusMessage" model="@Model.StatusMessage" />
            <div class="form-group">
                @Html.LabelFor(x => x.Input.RoleNames)
                @Html.ListBoxFor(x => x.Input.RoleNames,
                    new SelectList(Model.AllRoles),
                    new { @class = "w-100", id = "selectrole" })
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id">
            <input type="hidden" asp-for="isConfirmed">
            <a class="btn btn-primary" asp-page="./User">List Role</a>
            <button type="submit" class="btn btn-danger">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <script>
          $('#selectrole').({
                selectAll: false,
                keepOpen: false,
                isOpen: false
            });
    </script>
    <partial name="_ValidationScriptsPartial" />
}