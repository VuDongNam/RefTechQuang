@page
@model DeleteModel
@{
}

<h1>Delete Role</h1>

<div class="row">
    <div class="col-md-6">
        <p>Are you sure to delete Role <strong>@Model.Input.Name</strong> </p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.ID">
            <input type="hidden" asp-for="isConfirmed">
            <a class="btn btn-primary" asp-page="./Index">Role List</a>
            <button type="submit" asp-page="./Delete" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}